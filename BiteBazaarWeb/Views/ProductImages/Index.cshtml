@model IEnumerable<BiteBazaarWeb.Models.ProductImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img class="img-thumbnail" style="width: 150px" src="@Html.DisplayFor(modelItem => item.URL)"/> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductImageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductImageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductImageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
