@model IEnumerable<CartProductVM>


@{ decimal total = 0;}
<div class="mx-auto col-sm-12 col-md-10 col-lg-8 shadow p-2">
    <h3 class="text-center mb-4">Kundkorg</h3>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Produkt</th>
                    <th>Antal</th>
                    <th>Pris</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (item.Product.Images.Any())
                        {
                            <td><img src="@item.Product.Images.First().URL" style="width: 75px;" class="border border-2"/></td>
                        }
                        else
                        {
                            <td><img src="https://placehold.co/100x100" style="width: 100px;" /></td>
                        }
                        <td class="me-0 pe-0">@item.Product.Title</td>

                        <td>
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Minus" asp-route-id="@item.CartId" class="btn-sm btn-outline-primary text-decoration-none p-1"><i class="bi bi-dash-square"></i></a>
                            @item.Count
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Plus" asp-route-id="@item.CartId" class="btn-sm btn-outline-primary text-decoration-none p-1"><i class="bi bi-plus-square"></i></a>
                        </td>

                        <td>@item.Product.Price.ToString("c0")</td>
                        <td>@((item.Product.Price * item.Count).ToString("c0"))</td>
                        <p hidden>@{total += (item.Product.Price * item.Count);}</p>
                        <td> <a asp-area="Customer" asp-controller="Cart" asp-action="Delete" asp-route-id="@item.CartId" class="btn-sm btn-danger text-decoration-none"><i class="bi bi-trash"></i></a></td>
                    </tr>

            }
                </tbody>
            </table>
        <div class="text-center mb-3">
            <p class="fs-4"><strong>Totalt: @total.ToString("C0")</strong></p>
            <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout" class="btn btn-outline-dark d-block mx-auto w-50">Checkout</a>
        </div>
       
    </div>

