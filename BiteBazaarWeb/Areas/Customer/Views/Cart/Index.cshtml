@model IEnumerable<Cart>


@{ decimal total = 0;}
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Produkt</th>
                    <th>Antal</th>
                    <th>Pris</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (item.Product.Images.Any())
                        {
                            <td><img src="@item.Product.Images.First().URL" style="width: 100px;" /></td>
                        }
                        else
                        {
                            <td><img src="https://placehold.co/100x100" style="width: 100px;" /></td>
                        }
                        <td>@item.Product.Title</td>
                       
                        <td>
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Minus" asp-route-id="@item.CartId" class="btn-sm btn-outline-primary text-decoration-none"><i class="bi bi-dash-square"></i></a>
                            @item.Count
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Plus" asp-route-id="@item.CartId" class="btn-sm btn-outline-primary text-decoration-none"><i class="bi bi-plus-square"></i></a>
                        </td>
                       
                        <td>@item.Product.Price.ToString("c0")</td>
                        <td>@((item.Product.Price * item.Count).ToString("c0"))</td>
                        <p hidden>@{total += (item.Product.Price * item.Count);}</p>
                        <td> <a asp-area="Customer" asp-controller="Cart" asp-action="Delete" asp-route-id="@item.CartId" class="btn-sm btn-danger text-decoration-none"><i class="bi bi-trash"></i></a></td>
                    </tr>
                   
            }
                </tbody>
            </table>
        <p>Total summa: @total.ToString("C0")</p>
        <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Checkout</a>
    </div>

