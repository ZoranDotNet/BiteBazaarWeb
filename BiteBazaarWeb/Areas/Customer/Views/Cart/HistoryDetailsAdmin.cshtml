@model OrderHistoryVM

<div class="container p-4">
    <link href="~/css/ViewSpecific/Order.css" rel="stylesheet" />

    <div class="order-card">
        <div class="p-3">
            <div class="text-center mb-3">
                <h1>Order Historik</h1>
            </div>
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th>Antal</th>
                            <th>Produkt</th>
                            <th>Pris</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Specifications)
                        {
                            <tr class=" text-light">
                                <td>@item.Count</td>
                                <td>@item.Product.Title</td>
                                <td>@item.PayedPrice.ToString("C0")</td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                @if (Model.Order.Status != OrderStatus.Skickad)
                {
                    <a asp-area="Customer" asp-controller="Cart" asp-action="ShipOrder" asp-route-id="@Model.Order.OrderId" class="btn btn-primary">Skicka Order</a>
                }
                <a asp-action="OrderHistoryAdmin" class="btn btn-egen">Tillbaka</a>
            </div>
        </div>
    </div>
</div>
