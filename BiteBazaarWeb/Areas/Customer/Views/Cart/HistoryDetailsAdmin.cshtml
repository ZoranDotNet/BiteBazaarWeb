@model OrderHistoryVM

<div class="container p-4">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Antal</th>
                <th>Produkt</th>
                <th>Pris</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Specifications)
            {
                <tr>
                    <td>@item.Count</td>
                    <td>@item.Product.Title</td>
                    <td>@item.PayedPrice.ToString("C0")</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        @if (Model.Order.Status != OrderStatus.Skickad) 
        {
            <a asp-area="Customer" asp-controller="Cart" asp-action="ShipOrder" asp-route-id="@Model.Order.OrderId" class="btn btn-primary">Skicka Order</a>
        }
        <a asp-action="OrderHistoryAdmin" class="btn btn-primary">Tillbaka</a>
    </div>
</div>
