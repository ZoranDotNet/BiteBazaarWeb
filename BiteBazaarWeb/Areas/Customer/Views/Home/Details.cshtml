@model Cart



<form method="post">
    <div class="row">
        <div class="col-11 col-md-8 col-lg-6 shadow p-4 mx-auto mt-3">
            <div class="d-flex justify-content-between">
                <h4><strong>@Model.Product.Title</strong></h4>
                <div>
                    <a asp-action="Products" class="btn btn-outline-primary text-decoration-none">Tillbaka</a>
                </div>
            </div>
            <hr />
            <input asp-for="FkProductId" type="hidden" />
            <div class="d-flex justify-content-between align-items-lg-start">
                <div class="p-2">
                    <h3><span class="badge bg-success">@Model.Product.Category.Title</span></h3>
                    <p><strong>Produktinformation:</strong><br /> @Model.Product.Description</p>
                    @if (Model.Product.Quantity <= 5)
                    {
                        <p class="text-danger"><strong>Fåtal produkter kvar</strong></p>
                    }
                    
                    @if (Model.Product.IsCampaign && Model.Product.TempPrice > 0)
                    {
                        <p class="text-decoration-line-through"><strong>Pris:</strong> @Model.Product.Price.ToString("C0")</p>
                        <p class="text-danger"><strong>Pris:</strong> @Model.Product.TempPrice.ToString("C0")</p>
                    }
                    else
                    {
                        <p><strong>Pris:</strong> @Model.Product.Price.ToString("C0")</p>
                    }

                    <div class="input-group mb-3 p-2 me-2">
                        <span class="input-group-text bg-secondary text-white border-0">
                            Antal
                        </span>
                        <input type="number" asp-for="Count" value="1" class="text-center rounded p-0 d-inline-block" />
                    </div>


                    <button type="submit" class="btn btn-primary">Lägg i varukorg</button>
                </div>
                <div class="p-2">
                    @if (Model.Product.Images != null && Model.Product.Images.Count > 0)
                    {
                        @foreach (var item in Model.Product.Images)
                        {
                            <img src="@item.URL" style="width:100px" class="mb-4 me-4" />
                        }
                    }
                    else
                    {
                        <img src="https://placehold.co/100x100" class="card-img-top rounded" />
                    }
                </div>
            </div>
        </div>
        
    </div>
</form>

