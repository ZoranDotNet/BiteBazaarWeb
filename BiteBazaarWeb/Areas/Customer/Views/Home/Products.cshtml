@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<BiteBazaarWeb.Models.Product>

<link href="/css/ViewSpecific/zoran.css" rel="stylesheet" />


<div class="productSearchBar p-1">
    <div class="filterWrapper">
        <select id="filter" class="filterCategory" asp-items="ViewBag.FkCategoryId" onchange="filterProducts()">
            <option value="" hidden> Filter</option>
        </select>
       
    </div>

    <div class="search">
        <input type="text" id="searchString" placeholder="Sök produkt..." />
        <button id="searchButton"><i class="bi bi-search"></i></button>
    </div>
</div>
<div class="secondbar p-1">
    <div class="showAll">
        <a asp-action="Products" class="showAllLink">Visa alla</a>
    </div>
    <div class="objPerPage">
        <form method="get" asp-action="Products">
            <div class="objPerPage-inner">
                <label for="pageSize">Antal per sida:</label>
                <select id="pageSize" name="pageSize" onchange="this.form.submit()">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
                <noscript>
                    <input type="submit" value="Submit" />
                </noscript>
            </div>
            
        </form>

    </div>

</div>
<div class="d-flex">
    <span id="headline" class="visually-hidden me-3 text-white">Filtrerat på: </span>
    <span id="headline2" class="visually-hidden me-3 text-white">Sökt på: </span>
    <p id="showFilter" class="text-white"></p>
</div>
<div class="row p-2 mb-2" id="productsContainer">
    <partial name="_ProductList" />
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Products", new { page, pageSize = Model.PageSize }))
</div>


@section Scripts {


    <script src="/js/Products.js" type="text/javascript"></script>

}
