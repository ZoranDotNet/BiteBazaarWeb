@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<BiteBazaarWeb.Models.Product>

<link href="/css/ViewSpecific/zoran.css" rel="stylesheet" />


<div class="productSearchBar p-1">
    <div class="filterWrapper">
    <div class="showAll">
        <a asp-action="Products">Visa alla</a>
    </div>

        <select id="filter" class="filterCategory" asp-items="ViewBag.FkCategoryId" onchange="filterProducts()">
            <option value="" hidden class="bg-secondary"> Filter</option>
        </select>

    </div>

    <div class="search">
        <input type="text" id="searchString" placeholder="Sök produkt..." />
        <button id="searchButton" class="search-glas"><i class="bi bi-search"></i></button>
    </div>
</div>


<div class="d-flex mt-3">
    <span id="headline" class="visually-hidden me-3 text-white"></span>
    <span id="headline2" class="visually-hidden me-3 text-white">Sökt på: </span>
    <p id="showFilter" class="text-white"></p>
</div>

<div class="products-grid row p-2 mb-2" id="productsContainer">
    <partial name="_ProductList" />
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Products", new { page, pageSize = Model.PageSize }))
</div>


@section Scripts {


    <script src="/js/Products.js" type="text/javascript"></script>

}
