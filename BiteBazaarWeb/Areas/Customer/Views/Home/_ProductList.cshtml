@model IEnumerable<Product>


@foreach (var item in Model)
{
    <div class="col-sm-6 col-lg-3">
        <div class="row p-1">
            <div class="col-12 p-1">
                <div class="card border-0 p-2 shadow border-top border-5 rounded">
                    @if (item.Images != null && item.Images.Count > 0)
                    {
                        <img src="@item.Images.First().URL" class="card-img-top rounded" style="height:250px" />
                    }
                    else
                    {
                        <img src="https://placehold.co/100x100" class="card-img-top rounded" />
                    }
                <div class="card-body pb-0">
                    <h5>@item.Title</h5>
                    @if (item.IsCampaign && item.TempPrice > 0)
                    {
                        <h5><span class="text-decoration-line-through">@item.Price.ToString("C0") </span><span class="text-danger ms-2">@item.TempPrice.ToString("C0")</span></h5>
                    }
                    else
                    {
                        <h5>@item.Price.ToString("C0")</h5>
                    }

                </div>
                    <div>
                        <a class="btn-sm btn-secondary text-decoration-none" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                        <a class="btn-sm btn-secondary text-decoration-none" asp-controller="User" asp-action="AddToList" asp-route-id="@item.ProductId"><i class="bi bi-heart"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

