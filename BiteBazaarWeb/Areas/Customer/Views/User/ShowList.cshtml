@model IEnumerable<FavouriteProduct>

<link href="~/css/ViewSpecific/Product.css" rel="stylesheet"/>

<h1>Favoritprodukter</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.FkProductId" class="card-link text-decoration-none">
            <div class="card">
                <div class="card-body product-body">
                    <div class="image-container">
                        @if (item.Product.Images != null && item.Product.Images.Count > 0)
                        {
                            <img src="@item.Product.Images.First().URL" style="width:250px"/>
                        }
                        else
                        {
                            <img src="https://placehold.co/100x100" class="card-img-top rounded"/>
                        }
                    </div>
                    <div class="info-container text-center">
                        <div class="mb-4 text-light"><strong>@item.Product.Title</strong></div>
                        <h5 class="mb-4 text-light">@item.Product.Price</h5>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.FkProductId" class="button-pink">Visa</a>
                        <a asp-controller="User" asp-action="RemoveItem" asp-route-id="@item.FavouriteProductId" class="text-danger text-decoration-none me-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>
            </div>
            </a>
        </div>
    }
</div>
