@model Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Radera</h1>

<h3 class="text-white">Är du säker på att du vill radera denna produkt?</h3>
<div>
    <h4>Produkt</h4>
    <hr />
    <dl class="row text-light">
        <dt class = "col-sm-2">
            <p>Titel</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            <p>Beskrivning</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <p>Pris</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            <p>Kategori</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="button-red" /> 
        <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
    </form>
</div>
