@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Produktöversikt</h1>

<p>
    <a asp-action="Create" class="btn btn-egen"><i class="bi bi-plus-square"></i> Lägg till</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card bg-transparent h-100">
                <div class="container-cards rounded d-flex flex-column align-items-center text-center h-100 p-3">
                    <div class="card-body">
                        <img src="@item.Images.First().URL" class=" card-img-top mb-5" alt="Produktbild">

                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">Lager: @item.Quantity</p>
                        <p class="card-text">Pris: @item.Price.ToString("c")</p>
                        <p class="card-text">Kategori: @item.Category.Title</p>
                       
                        
                    </div>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-egen-blue mb-2">Redigera</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-egen mb-2">Lägg till bild</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-egen-danger mb-2">Radera</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div