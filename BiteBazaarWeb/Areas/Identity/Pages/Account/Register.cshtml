@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera";
}

<link href="~/css/ViewSpecific/Login.css" rel="stylesheet" />

<div class="register-wrapper mx-auto">
    <h2 class="">Registrera konto</h2>
    
    <div class="px-3">
                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="d-flex gap-4">
                        <div class="input-box">
                            <input asp-for="Input.Name" aria-required="true" required />
                            <label>Namn</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <input asp-for="Input.Email" aria-required="true" required/>
                            <label>Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex gap-4">
                        <div class="input-box">
                            <input asp-for="Input.Password" aria-required="true" required />
                            <label>Lösenord</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <input asp-for="Input.ConfirmPassword" aria-required="true" required />
                            <label>Bekräfta Lösenord</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex gap-4">
                        <div class="input-box">
                            <input asp-for="Input.PhoneNumber" aria-required="true" required />
                            <label>Mobilnummer</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <input asp-for="Input.StreetAddress" aria-required="true" required />
                            <label>Gatuadress</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex gap-4">
                        <div class="input-box">
                            <input asp-for="Input.ZipCode" aria-required="true" required />
                            <label>Postnummer</label>
                            <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <input asp-for="Input.City" aria-required="true" required />
                            <label>Ort</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>
                   
                    @*@if (User.IsInRole(SD.Role_Admin))*@
                    
                        <div class="">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option hidden value="">--Välj Roll--</option>
                            </select>
                        </div>
                    

                    <div class="">
                        <button id="registerSubmit" type="submit" class="pinkButton">Registrera</button>
                    </div>
                </form>
           

            <div class="col-md-12">
                <section>
                    <p class="pt-3 text-center">eller använd:</p>
                    <div class="text-center">
                        
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                   
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="bg-transparent m-0 p-0 border-0 ms-2 me-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><img src="~/images/logos/@provider.DisplayName.ToLower()_logo.png" style="height:40px" /></button>
                                            }


                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </section>
            </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
